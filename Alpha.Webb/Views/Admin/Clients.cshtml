@{
    Layout = "_DashboardLayout";
    ViewData["Title"] = "Clients";
}


<partial name="Partials/Sections/_AddClientModal" />



<section id="clients">
    <header>
        <h2>Clients</h2>
        <button type="button" data-modal="true" data-target="#addCliendModal">Add Client</button>
    </header>

    <div class="client-list box-surface">
        <table>
            <thead>
                <tr>
                    <th class="client-check"><input type="checkbox" /></th>
                    <th class="client-info">Client Name</th>
                    <th class="client-location">Location</th>
                    <th class="client-phone">Phone</th>
                    <th class="client-date">Date</th>
                    <th class="client-status">Status</th>
                    <th class="client-actions"></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td class="client-check"><input type="checkbox" /></td>
                    <td class="client-info">
                        <img class="client-image" src="~/images/avatars/default-avatar-male-2.svg" />
                        <div class="client-name">Blästrad AB</div>
                        <div class="client-email">info@domain.com</div>
                    </td>
                    <td class="client-location">Enköping, Sverige</td>
                    <td class="client-phone">+4670 123 45 78</td>
                    <td class="client-date">25-03-10</td>
                    <td class="client-status">
                        <div class="badge success">
                            active
                        </div>
                    </td>
                    <td class="client-actions">
                        <i class="fa-regular fa-ellipsis"></i>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>